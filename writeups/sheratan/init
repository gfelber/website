```sh
#!/bin/sh
# devtmpfs does not get automounted for initramfs
/bin/mount -t devtmpfs devtmpfs /dev
/bin/mount -t proc none /proc
/bin/mount -t sysfs none /sys
/bin/mount -t tmpfs none /tmp

# use the /dev/console device node from devtmpfs if possible to not
# confuse glibc's ttyname_r().
# This may fail (E.G. booted with console=), and errors from exec will
# terminate the shell, so use a subshell for the test
if (exec 0</dev/console) 2>/dev/null; then
    exec 0</dev/console
    exec 1>/dev/console
    exec 2>/dev/console
fi

# setup sheratan kmod
ln -s /lib/modules/*/updates/sheratan.ko /sheratan.ko
insmod /sheratan.ko

# network
/etc/init.d/S40network start
# ip addr add 192.168.111.2/24 dev eth1
# ip link set eth1 up
# ip route add 192.168.111.0/24 dev eth1


# setup chroot
mkdir -p /chroot
mount /dev/vda /chroot

# flag link
chmod 000 /dev/vdb
chmod 444 /dev/vdc
ln -s /dev/vdb /flag

# /usr/local/bin/mesarthim_client & 

cat /etc/issue

if grep -q "init=/bin/sh" /proc/cmdline; then
  /bin/sh # root
else
  nsjail --chroot /chroot --config /etc/nsjail.cfg --hostname nsjail --disable_clone_newuser -- /bin/bash
fi


umount /proc
umount /sys
poweroff -d 0  -f
```
